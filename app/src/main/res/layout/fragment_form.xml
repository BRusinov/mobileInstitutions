<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/form_id_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/form_name_text_field"
        style="?android:listSeparatorTextViewStyle" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/form_holder_layout">
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Снимай с камера"
                    android:layout_alignParentBottom="true"/>
                <Button
                    android:id="@+id/form_submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/formSubmitButtonText"

 />

            </LinearLayout>
        </ScrollView>

</LinearLayout>
